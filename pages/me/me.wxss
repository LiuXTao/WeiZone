/* pages/me/me.wxss */
.user-base{
  padding: 1px 0;
  background-color: #46A3FF;
  color: #fff;
  width:100%;
}
.user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0.5em 0 1em 0;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border:2px solid rgba(255,255,255,0.6);
  margin: 0 auto;
  box-sizing: border-box;
}
.userinfo-nickname{
  margin: 0.4em 0 0 0;
}
.user-nav{
  background:#F0F0F0	;
  width:100%;
  height:1000rpx;
}
.number{
  font-size: 48rpx;
}
.nav-group{
  margin-bottom:40rpx;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
}
.nav-item{
  position: relative;
  border-bottom:1px solid #eee;
}
.nav-item::after{
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 1em;
  height: 1px;
  background-color: #eee;
  transform: translateY(50%);
}
.nav-item:last-child::after{
  background-color:rgba(255,255,255,0);
}

.nav-item navigator{
  padding:22rpx 1em;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.nav-icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
text{
  font-size:33rpx;
  font-weight: normal;
  color:#3C3C3C;
}